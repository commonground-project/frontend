{
    "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
    "tasks": [
        {
            "name": "welcome-message-example",
            "command": "bash",
            "args": ["-c", "echo Husky.Net is awesome!"],
            "windows": {
                "command": "cmd",
                "args": ["/c", "echo Husky.Net is awesome!"]
            }
        },
        {
            "name": "format-code",
            "command": "pnpm",
            "args": [
                "exec",
                "prettier",
                "--ignore-unknown",
                "--check",
                "${staged}"
            ],
            "pathMode": "absolute"
        }
    ]
}
