{
    "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
    "tasks": [
        {
            "name": "build",
            "command": "pnpm",
            "args": ["run", "build"]
        },
        {
            "name": "lint",
            "command": "pnpm",
            "args": ["run", "lint"]
        },
        {
            "name": "test",
            "command": "pnpm",
            "args": ["run", "test"]
        },
        {
            "name": "format-code",
            "command": "pnpm",
            "args": [
                "exec",
                "prettier",
                "--ignore-unknown",
                "--write",
                "./src/**/*.{ts,tsx,js,jsx,json,css}"
            ],
            "pathMode": "absolute"
        }
    ]
}
